<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="color_accent">#23A84D</color>
    <color name="color_primary">#EF6C00</color>
    <color name="color_primary_dark">#E65100</color>
    <color name="color_light_gray">#F5F5F5</color>
    <color name="color_gray">#BDBDBD</color>
    <color name="color_back">#EEEEEE</color>
    <color name="color_tint">#8a8a8a</color>
    <color name="color_semitransparent">#baffffff</color>
    <color name="color_black">#000000</color>
    <color name="color_black_semitransparent">#cc000000</color>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionBarTheme">@style/ToolbarTheme</item>

        <item name="android:windowBackground">@color/color_light_gray</item>
    </style>

    <style name="PlayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_primary</item>

        <item name="android:windowBackground">@color/color_black</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="ToolItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/color_tint</item>
    </style>

    <style name="SizeItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/color_tint</item>
    </style>

    <style name="TuneItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/color_tint</item>
    </style>

</resources>